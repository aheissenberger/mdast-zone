{
  "name": "mdast-zone",
  "version": "2.0.0",
  "description": "HTML comments as ranges or markers in remark",
  "license": "MIT",
  "keywords": [
    "html",
    "comment",
    "comments",
    "zone",
    "range",
    "marker",
    "mdast"
  ],
  "dependencies": {
    "unist-util-visit": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wooorm/mdast-zone.git"
  },
  "bugs": "https://github.com/wooorm/mdast-zone/issues",
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "files": [
    "index.js"
  ],
  "devDependencies": {
    "browserify": "^13.0.0",
    "eslint": "^1.0.0",
    "esmangle": "^1.0.0",
    "istanbul": "^0.4.0",
    "jscs": "^2.0.0",
    "jscs-jsdoc": "^1.0.0",
    "remark": "^3.0.0",
    "remark-github": "^3.0.0",
    "remark-lint": "^2.0.0",
    "remark-toc": "^2.0.0",
    "remark-usage": "^2.0.0",
    "remark-validate-links": "^2.0.0",
    "remark-yaml-config": "^2.0.0",
    "tape": "^4.4.0"
  },
  "scripts": {
    "build-md": "remark . --quiet --frail",
    "build-bundle": "browserify --no-builtins -u esprima index.js -s mdastZone > mdast-zone.js",
    "build-mangle": "esmangle mdast-zone.js > mdast-zone.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint-api": "eslint .",
    "lint-style": "jscs --reporter inline .",
    "lint": "npm run lint-api && npm run lint-style",
    "test-api": "node test/index.js",
    "test-coverage": "istanbul cover test/index.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  }
}
